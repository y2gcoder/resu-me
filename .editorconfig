root = true

# 기본 규칙 (모든 파일 공통)
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Python (PEP8 권장 4칸)
[*.py]
indent_size = 4

# Java / Kotlin (관례 4칸)
[*.java]
indent_size = 4

[*.kt]
indent_size = 4

# YAML (보통 2칸 유지)
[*.{yml,yaml}]
indent_size = 2

# JSON/Markdown (2칸이 가독성 좋음)
[*.{json,md}]
indent_size = 2

# Dockerfile
[Dockerfile]
indent_size = 2

# GitHub Actions (YAML)
[.github/**/*.yml]
indent_size = 2
